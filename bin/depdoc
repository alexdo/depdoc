#!/usr/bin/env php
<?php

$composerAutoload = getcwd() . '/vendor/autoload.php';

if (!file_exists($composerAutoload)) {
    echo 'Couldn\'t find composer, make sure to run script in project root!' . PHP_EOL;
    exit(1);
}

require $composerAutoload;

array_shift($argv);

$containerBuilder = new \Symfony\Component\DependencyInjection\ContainerBuilder();
$loader = new \Symfony\Component\DependencyInjection\Loader\YamlFileLoader($containerBuilder, new \Symfony\Component\Config\FileLocator(__DIR__ . DIRECTORY_SEPARATOR . '..' . DIRECTORY_SEPARATOR . 'config'));
$loader->load('services.yml');

$application = new \DepDoc\Application\DepDocApplication($containerBuilder);
$exitCode = $application->run();
exit($exitCode);
